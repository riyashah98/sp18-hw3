<%= form_tag students_path do %>
  <%= label_tag(:full_name, "Full name") %>
  <%= text_field_tag(:full_name) %>

  <%= label_tag(:age, "Age") %>
  <%= text_field_tag(:age, nil, placeholder: @placeholder_course) %>

  <%= label_tag(:height, "height") %>
  <%= text_field_tag(:height) %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("Create student") %>
<% end %>